{% set outcome = charge.data.outcome ?: null %}

{% if outcome %}

  <div class="mb-4 border-grey-light border-solid border rounded overflow-hidden">
    <div class="bg-grey-lightest p-4 text-grey-dark text-sm border-grey-light border-solid border-b">
      Outcome
    </div>

    <div class="flex p-4 pb-2
      {% if outcome.type == 'authorized' %}bg-green-lightest
      {% elseif outcome.type == 'manual_review' %}bg-orange-lightest
      {% else %}bg-red-lightest
      {% endif %} border-grey-light border-solid border-b">
      <div class="w-full sm:w-1/3 text-grey-dark">
        Type
      </div>
      <div>
        {{ ((outcome.type|replace({'_': ' '}))|title)|default('N/A') }}
      </div>
    </div>

    <div class="flex p-4 pb-2
      {% if outcome.risk_level == 'normal' %}bg-green-lightest
      {% elseif outcome.risk_level == 'elevated' %}bg-orange-lightest
      {% else %}bg-red-lightest
      {% endif %} border-grey-light border-solid border-b">
      <div class="w-full sm:w-1/3 text-grey-dark">
        Risk Level
      </div>
      <div>
        {{ ((outcome.risk_level|replace({'_': ' '}))|title)|default('N/A') }}
      </div>
    </div>

    <div class="flex p-4 pb-2 border-grey-light border-solid border-b">
      <div class="w-full sm:w-1/3 text-grey-dark">
        Message
      </div>
      <div>
        {{ outcome.seller_message|default('N/A') }}
      </div>
    </div>

    <div class="flex p-4 pb-2
      {% if outcome.network_status == 'approved_by_network' %}bg-green-lightest
      {% else %}bg-red-lightest
      {% endif %} border-grey-light border-solid border-b">
      <div class="w-full sm:w-1/3 text-grey-dark">
        Network Status
      </div>
      <div>
        {{ ((outcome.network_status|replace({'_': ' '}))|title)|default('N/A') }}
      </div>
    </div>

    <div class="flex p-4 pb-2">
      <div class="w-full sm:w-1/3 text-grey-dark">
        Reason
      </div>
      <div>
        {{ ((outcome.reason|replace({'_': ' '}))|title)|default('N/A') }}
      </div>
    </div>

  </div>
{% endif %}
