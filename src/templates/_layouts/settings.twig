{% extends "stripe-checkout/_layouts/settingscp" %}

{% set title = 'Stripe Checkout Settings' %}

{% set navItems = {
    'general':     { title: 'General Settings' },
    'credentials': { title: 'Credentials' },
    'webhooks':    { title: 'Webhooks' },
} %}

{% if selectedItem is not defined %}
    {% set selectedItem = craft.app.request.getSegment(3) %}
{% endif %}

{% set docTitle = navItems[selectedItem].title ~ ' - ' ~ title %}

{% block sidebar %}
    <nav>
        <ul>
            {% for id, item in navItems %}
                {% if item.heading is defined %}
                    <li class="heading"><span>{{ item.heading }}</span></li>
                {% else %}
                    <li>
                        <a href="{{ url('stripe-checkout/settings/' ~ id) }}"{% if id == selectedItem %} class="sel"{% endif %}>{{ item.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </nav>
{% endblock %}
